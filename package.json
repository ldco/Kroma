{
  "name": "image-api-tool",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Prompt-driven staged image edits tool with safety gates and reproducible run logs.",
  "scripts": {
    "lab:legacy": "KROMA_ENABLE_LEGACY_SCRIPTS=1 node scripts/image-lab.mjs",
    "upscale:legacy": "KROMA_ENABLE_LEGACY_SCRIPTS=1 node scripts/image-lab.mjs upscale",
    "color:legacy": "KROMA_ENABLE_LEGACY_SCRIPTS=1 node scripts/image-lab.mjs color",
    "bgremove:legacy": "KROMA_ENABLE_LEGACY_SCRIPTS=1 node scripts/image-lab.mjs bgremove",
    "qa:legacy": "KROMA_ENABLE_LEGACY_SCRIPTS=1 node scripts/image-lab.mjs qa",
    "archivebad:legacy": "KROMA_ENABLE_LEGACY_SCRIPTS=1 node scripts/image-lab.mjs archive-bad",
    "backend:init": "KROMA_ENABLE_LEGACY_SCRIPTS=1 python3 scripts/backend.py init-db --with-default-user",
    "backend:migrate": "KROMA_ENABLE_LEGACY_SCRIPTS=1 python3 scripts/db_migrate.py",
    "backend:user:local": "KROMA_ENABLE_LEGACY_SCRIPTS=1 python3 scripts/backend.py ensure-user --username local --display-name \"Local User\"",
    "backend:project:list": "KROMA_ENABLE_LEGACY_SCRIPTS=1 python3 scripts/backend.py list-projects",
    "backend:rust": "cd src-tauri && cargo run",
    "backend:rust:test": "cd src-tauri && cargo test",
    "backend:worker": "cd src-tauri && cargo run -- agent-worker",
    "backend:worker:once": "cd src-tauri && cargo run -- agent-worker --once",
    "backend:contract:smoke": "python3 scripts/contract_smoke.py",
    "realesrgan:setup": "python3 scripts/setup_tools.py realesrgan-ncnn",
    "realesrgan:python:setup": "python3 scripts/setup_tools.py realesrgan-python",
    "rembg:setup": "python3 scripts/setup_tools.py rembg",
    "tools:setup": "python3 scripts/setup_tools.py all"
  },
  "engines": {
    "node": ">=20"
  }
}
