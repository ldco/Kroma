{
  "name": "image-api-tool",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Prompt-driven staged image edits tool with safety gates and reproducible run logs.",
  "scripts": {
    "lab": "node scripts/image-lab.mjs",
    "upscale": "node scripts/image-lab.mjs upscale",
    "color": "node scripts/image-lab.mjs color",
    "bgremove": "node scripts/image-lab.mjs bgremove",
    "qa": "node scripts/image-lab.mjs qa",
    "archivebad": "node scripts/image-lab.mjs archive-bad",
    "backend:init": "python3 scripts/backend.py init-db --with-default-user",
    "backend:migrate": "python3 scripts/db_migrate.py",
    "backend:user:local": "python3 scripts/backend.py ensure-user --username local --display-name \"Local User\"",
    "backend:project:list": "python3 scripts/backend.py list-projects",
    "backend:api": "python3 scripts/backend_api.py --host 127.0.0.1 --port 8787 --with-default-user",
    "backend:worker": "python3 scripts/agent_worker.py",
    "backend:worker:once": "python3 scripts/agent_worker.py --once",
    "backend:contract:smoke": "bash scripts/contract-smoke.sh",
    "realesrgan:setup": "bash scripts/setup-realesrgan.sh",
    "realesrgan:python:setup": "bash scripts/setup-realesrgan-python.sh",
    "rembg:setup": "bash scripts/setup-rembg.sh"
  },
  "engines": {
    "node": ">=20"
  }
}
